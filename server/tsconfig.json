{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "es7",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist",
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es2017",
    "typeRoots": [
      "../node_modules/@types"
    ],
    "types": [
      "node",
      "jasmine"
    ]
  }
}
